<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="WB\OneStepCheckout\Block\Checkout\CustomNote" name="checkout.custom.note" template="WB_OneStepCheckout::checkout/custom_note.phtml" before="-"/>
            <block class="WB\OneStepCheckout\Block\Checkout\CustomJs" name="wb.checkout.custom.js" template="WB_OneStepCheckout::script.phtml"/>
        </referenceContainer>

        <referenceBlock name="checkout.cart.totals">
            <block class="WB\OneStepCheckout\Block\Checkout\CustomNote" name="checkout.custom.note.summary" template="WB_OneStepCheckout::checkout/custom_note_summary.phtml" before="-"/>
        </referenceBlock>
    </body>
</page>
